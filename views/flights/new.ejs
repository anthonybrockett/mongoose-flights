<%- include('../partials/header') %>

<h2>Enter a New Flight</h2>
<h3>Default Departure: <%= departsDate %> </h3>
<form action="/flights" method="POST">
    <label>Airline:
        <select name="airline">
            <option value="American">American</option>
            <option value="Southwest">Southwest</option>
            <option value="United">United</option>
        </select>
    </label><br>
    <label>Airport:
        <!-- <input type="text" name="airport" size = 30 placeholder="AUS, DFW, DEN, LAX, or SAN"> -->
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN" selected>DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    </label><br>
    <label>Flight Number:
        <input type="number" name="flightNo" min="10" max="9999">
    </label><br>
    <label>Departure Date:
        <input type="datetime-local" name="departs">
    </label><br>
    <input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>